{
  // http://eslint.org/docs/rules/
  // https://github.com/yannickcr/eslint-plugin-react

  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "amd": false,
    "mocha": true
  },
  "globals": {
    "goog": true,
    "ENV_DEBUG": false //нельзя перезаписывать значение ENV_DEBUG
  },
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "ecmaFeatures": {
    "classes": true,
    "modules": true,
    "jsx": true,
    "generators": true,
    "spread": true,
    "experimentalObjectRestSpread": true,
    "destructuring": true,
    "restParams": true
  },
  "rules": {
    "no-extra-semi": 1,
    // disallow unnecessary semicolons
    "no-inner-declarations": 2,
    // disallow function or variable declarations in nested blocks
    "comma-dangle": 2,

    // Best Practices
    "eqeqeq": [2, "smart"],
    "no-nested-ternary": 2,
    "id-length": [2, {"exceptions": ["_", "d", "l", "L", "x", "y", "z"]}],
    "prefer-const": 1,
    "no-const-assign": 2,
    "curly": 2,
    // specify curly brace conventions for all control statements
    "no-eval": 2,
    // disallow use of eval()
    "no-extend-native": 2,
    // disallow adding to native types
    "no-new-wrappers": 2,
    // disallows creating new instances of String, Number, and Boolean
    "no-with": 2,
    // disallow use of the with statement

    // Variables
    "no-undef": 2,
    // disallow use of undeclared variables unless mentioned in a /*global */ block

    // Node.js

    // Stylistic Issues
    "no-multi-spaces": 2,
    "multiline-ternary": [2, "never"],
    "space-infix-ops": 2,
    "space-in-parens": 2,
    "keyword-spacing": 2,
    "key-spacing": 2,
    "no-trailing-spaces": 2,
    "comma-spacing": 2,
    "func-call-spacing": 2,
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "array-bracket-spacing": [2, "never"],
    // enforce spacing inside array brackets (off by default)
    "indent": [2, 4, {"SwitchCase": 1}],
    // this option sets a specific tab width for your code (off by default)
    "no-array-constructor": 2,
    // disallow use of the Array constructor
    "no-mixed-spaces-and-tabs": 2,
    // disallow mixed spaces and tabs for indentation
    "no-new-object": 2,
    // disallow use of the Object constructor
    "object-curly-spacing": [2, "never"],
    // require or disallow padding inside curly braces (off by default)
    "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
    "semi": 2,
    "semi-spacing": [2, {"before": false, "after": true}],
    "camelcase": 2,
    // require or disallow use of semicolons instead of ASI

    // ECMAScript 6

    // Legacy
    //    "max-len": [1, 80, 2] // specify the maximum length of a line in your program (off by default)

    //JSX-rules (React)
    "jsx-quotes": [2, "prefer-double"],
    "react/display-name": [2, {"ignoreTranspilerName": true}],
    "react/jsx-curly-spacing": [2, "never"],
    "react/jsx-closing-bracket-location": 2,
    "react/jsx-pascal-case": 2,
    "react/jsx-space-before-closing" : [2, "always"],
    "react/jsx-boolean-value": [2, "always"],
    "react/prefer-es6-class": [2, "always"],
    "react/jsx-wrap-multilines": 2,
    "react/self-closing-comp": 2,
    "jsx-a11y/img-redundant-alt": 2,
    "jsx-a11y/no-access-key": 2
  }
}
